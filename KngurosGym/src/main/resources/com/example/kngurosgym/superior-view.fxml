            <Button text="👐 Aperturas - 3x15" prefWidth="250" prefHeight="80" onAction="#goToDetalleEjercicio"/>
            <Button text="🏹 Remo con barra - 4x12" prefWidth="250" prefHeight="80" onAction="#goToDetalleEjercicio"/>
