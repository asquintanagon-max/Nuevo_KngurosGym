<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>
<?import javafx.geometry.*?>

<BorderPane xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.example.kngurosgym.Controller.CardioController"
            style="-fx-background-color: #f5f5f5;">

    <top>
        <HBox alignment="CENTER_LEFT">
            <padding>
                <Insets top="10" right="10" bottom="10" left="10"/>
            </padding>
            <children>
                <Button text="⬅ Atrás" onAction="#goBack"/>
                <Region HBox.hgrow="ALWAYS"/>
                <Button text="Elegir" onAction="#goToProgreso"/>
            </children>
        </HBox>
    </top>

    <center>
        <VBox alignment="CENTER" spacing="15">
            <Button text="🏃 Caminadora - 15 min" prefWidth="250" prefHeight="80"/>
            <Button text="🤸 Burpees - 5 min" prefWidth="250" prefHeight="80"/>
            <Button text="🪢 Saltar la cuerda - 10 min" prefWidth="250" prefHeight="80"/>
            <Button text="🚴 Bicicleta fija - 20 min" prefWidth="250" prefHeight="80"/>
            <Button text="⛰️ Escaladora - 10 min" prefWidth="250" prefHeight="80"/>
        </VBox>
    </center>
</BorderPane>

